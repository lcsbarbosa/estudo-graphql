type Produto{
  id: ID!,
  nome: String,
  valor: Float
}

input ProdutoInput{
  id: ID,
  nome: String!,
  valor: Float
}

extend type Query{
  product(id: ID!): Produto
  products: [Produto]!
}

extend type Mutation{
  saveProduct(product: ProdutoInput): Produto!
  deleteProduct(id: ID!): Boolean!
}